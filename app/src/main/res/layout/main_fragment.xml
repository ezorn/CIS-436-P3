<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait"
    tools:context=".ui.main.MainFragment">

    <TextView
        android:id="@+id/DayBox1"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textIsSelectable="false"
        android:textSize="20sp"
        android:translationX="-10dp"
        android:translationY="187dp"
        app:layout_constraintBottom_toTopOf="@+id/DayBox2"
        app:layout_constraintEnd_toStartOf="@+id/WeatherBox1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/WeatherBox1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:translationY="200dp"
        app:layout_constraintBottom_toTopOf="@+id/WeatherBox2"
        app:layout_constraintEnd_toStartOf="@+id/TempaturesBox1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DayBox1"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TempaturesBox1"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="0dp"
        android:translationY="187dp"
        app:layout_constraintBottom_toTopOf="@+id/TempaturesBox2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WeatherBox1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DayBox2"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="-10dp"
        android:translationY="142dp"
        app:layout_constraintBottom_toTopOf="@+id/DayBox3"
        app:layout_constraintEnd_toStartOf="@+id/WeatherBox2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DayBox1" />

    <ImageView
        android:id="@+id/WeatherBox2"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:translationY="150dp"
        app:layout_constraintBottom_toTopOf="@+id/WeatherBox3"
        app:layout_constraintEnd_toStartOf="@+id/TempaturesBox2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DayBox2"
        app:layout_constraintTop_toBottomOf="@+id/WeatherBox1"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TempaturesBox2"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="0dp"
        android:translationY="143dp"
        app:layout_constraintBottom_toTopOf="@+id/TempaturesBox3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WeatherBox2"
        app:layout_constraintTop_toBottomOf="@+id/TempaturesBox1" />

    <TextView
        android:id="@+id/DayBox3"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="-10dp"
        android:translationY="100dp"
        app:layout_constraintBottom_toTopOf="@+id/DayBox4"
        app:layout_constraintEnd_toStartOf="@+id/WeatherBox3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DayBox2" />

    <ImageView
        android:id="@+id/WeatherBox3"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:translationY="100dp"
        app:layout_constraintBottom_toTopOf="@+id/WeatherBox4"
        app:layout_constraintEnd_toStartOf="@+id/TempaturesBox3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DayBox3"
        app:layout_constraintTop_toBottomOf="@+id/WeatherBox2"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/TempaturesBox3"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="0dp"
        android:translationY="100dp"
        app:layout_constraintBottom_toTopOf="@+id/TempaturesBox4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WeatherBox3"
        app:layout_constraintTop_toBottomOf="@+id/TempaturesBox2" />

    <TextView
        android:id="@+id/DayBox4"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="-10dp"
        android:translationY="55dp"
        app:layout_constraintBottom_toTopOf="@+id/DayBox5"
        app:layout_constraintEnd_toStartOf="@+id/WeatherBox4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DayBox3" />

    <TextView
        android:id="@+id/TempaturesBox4"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="0dp"
        android:translationY="55dp"
        app:layout_constraintBottom_toTopOf="@+id/TempaturesBox5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WeatherBox4"
        app:layout_constraintTop_toBottomOf="@+id/TempaturesBox3" />

    <ImageView
        android:id="@+id/WeatherBox4"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:translationY="50dp"
        app:layout_constraintBottom_toTopOf="@+id/WeatherBox5"
        app:layout_constraintEnd_toStartOf="@+id/TempaturesBox4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DayBox4"
        app:layout_constraintTop_toBottomOf="@+id/WeatherBox3"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/DayBox5"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="-10dp"
        android:translationY="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/WeatherBox5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DayBox4" />

    <TextView
        android:id="@+id/TempaturesBox5"
        android:layout_width="60dp"
        android:layout_height="26dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/navy"
        android:textSize="20sp"
        android:translationX="0dp"
        android:translationY="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/WeatherBox5"
        app:layout_constraintTop_toBottomOf="@+id/TempaturesBox4" />

    <ImageView
        android:id="@+id/WeatherBox5"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TempaturesBox5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/DayBox5"
        app:layout_constraintTop_toBottomOf="@+id/WeatherBox4"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/LocationBox"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/roboto_bold"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ZipCodeBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ZipCodeBox"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:layout_marginBottom="28dp"
        android:ems="10"
        android:fontFamily="@font/roboto_bold"
        android:hint="Enter Zip Code"
        android:inputType="number"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/SwitchToSingleButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocationBox" />

    <Button
        android:id="@+id/SwitchToSingleButton"
        android:layout_width="325dp"
        android:layout_height="40dp"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:text="Single Day View"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ZipCodeBox" />

</androidx.constraintlayout.widget.ConstraintLayout>